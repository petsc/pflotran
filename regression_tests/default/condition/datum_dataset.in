#Description: Test problem for verifying functionality of datasets in the
#             context of datums.

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE RICHARDS
    /
  /
END

SUBSURFACE

#=========================== regression =======================================
REGRESSION
  CELLS
    ! eight corners
    1
    5
    21
    25
    101
    105
    121
    125
    ! center of each side
    13 ! bottom
    53 ! south
    61 ! west
    65 ! east
    73 ! north
    113 ! top
  /
END

#=========================== flow mode ========================================

DEBUG
#  PRINT_COUPLERS outlet east_bc
END

#=========================== solver options ===================================
LINEAR_SOLVER FLOW
  SOLVER DIRECT
END

#=========================== discretization ===================================
GRID
  TYPE structured
  NXYZ 5 5 5
  BOUNDS
    0.d0 0.d0 0.d0
    5.d0 5.d0 5.d0
  /
END

DATASET xy_dataset
  FILENAME datum_dataset_in.h5
  HDF5_DATASET_NAME test_surface
  MAX_BUFFER_SIZE 6
END

DATASET y_dataset
  FILENAME datum_dataset_in.h5
  HDF5_DATASET_NAME y_line
END

DATASET x_dataset
  FILENAME datum_dataset_in.h5
  HDF5_DATASET_NAME x_line
END

#=========================== material properties ==============================
MATERIAL_PROPERTY soil1
  ID 1
  POROSITY 0.25d0
  PERMEABILITY
    PERM_ISO 1.d-12
  /
  CHARACTERISTIC_CURVES sf1
END

#=========================== characteristic curves ============================
CHARACTERISTIC_CURVES sf1
  SATURATION_FUNCTION VAN_GENUCHTEN
    M 0.5d0
    ALPHA 1.d-4
    LIQUID_RESIDUAL_SATURATION 0.1d0
  /
  PERMEABILITY_FUNCTION MUALEM_VG_LIQ
    M 0.5d0
    LIQUID_RESIDUAL_SATURATION 0.1d0
  /
END

OBSERVATION obs
  REGION obs_pt
/

#=========================== output options ===================================
OUTPUT
#  TIMES y 0.01 0.1 1.0
#  FORMAT TECPLOT POINT
#  PERIODIC_OBSERVATION TIMESTEP 1
END

#=========================== times ============================================
TIME
  FINAL_TIME 50.d0 s
  INITIAL_TIMESTEP_SIZE 2.5d0 s
  MAXIMUM_TIMESTEP_SIZE 10.d0 s
END

#=========================== regions ==========================================
REGION all
  COORDINATES
    0.d0 0.d0 0.d0
    5.d0 5.d0 5.d0
  /
END

REGION top
  FACE top
  COORDINATES
    0.d0 0.d0 5.d0
    5.d0 5.d0 5.d0
  /
END

REGION obs_pt
  COORDINATE 2.5 2.5 2.5
/

REGION east
  FACE east
  COORDINATES
    5.d0 0.d0 0.d0
    5.d0 5.d0 5.d0
  /
END

REGION south
  FACE south
  COORDINATES
    0.d0 0.d0 0.d0
    5.d0 0.d0 5.d0
  /
END

REGION bottom
  FACE bottom
  COORDINATES
    0.d0 0.d0 0.d0
    5.d0 5.d0 0.d0
  /
END

#=========================== flow conditions ==================================
FLOW_CONDITION initial
  TYPE
    PRESSURE hydrostatic
  /
  DATUM DATASET xy_dataset
  PRESSURE 101325.d0
END

FLOW_CONDITION east_line
  TYPE
    PRESSURE hydrostatic
  /
  DATUM DATASET y_dataset
  PRESSURE 101325.d0
END

FLOW_CONDITION south_line
  TYPE
    PRESSURE hydrostatic
  /
  DATUM DATASET x_dataset
  PRESSURE 101325.d0
END

FLOW_CONDITION recharge
  TYPE
    FLUX neumann
  /
  FLUX 10 cm/y
END

#=========================== condition couplers ===============================
# initial condition
INITIAL_CONDITION
  FLOW_CONDITION initial
  REGION all
END

BOUNDARY_CONDITION outlet
  FLOW_CONDITION initial
  REGION bottom
END

BOUNDARY_CONDITION east_bc
  FLOW_CONDITION east_line
  REGION east
END

BOUNDARY_CONDITION south_bc
  FLOW_CONDITION south_line
  REGION south
END

BOUNDARY_CONDITION initial
  FLOW_CONDITION recharge
  REGION top
END

#=========================== stratigraphy couplers ============================
STRATA
  REGION all
  MATERIAL soil1
END


END_SUBSURFACE
